<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开word文档"
        />

    <Button
        android:id="@+id/bt_docx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开word x文档"
        />

    <Button
        android:id="@+id/bt_xls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开xls文档"
        />

    <Button
        android:id="@+id/bt_xlsx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开xlsx文档"
        />

    <Button
        android:id="@+id/bt_pptx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开pptx文档"
        />

    <Button
        android:id="@+id/bt_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开txt文档"
        />

    <Button
        android:id="@+id/bt_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开pdf文档"
        />

</LinearLayout>